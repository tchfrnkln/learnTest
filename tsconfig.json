{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react", // or "react-jsx" for React 17 and newer
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["dom", "es6"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
